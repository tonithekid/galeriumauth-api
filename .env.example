# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="production"

# Mercado Pago
MP_ACCESS_TOKEN="your-mercado-pago-access-token"
MP_PUBLIC_KEY="your-mercado-pago-public-key"
MP_WEBHOOK_SECRET="your-webhook-secret"

# URLs (Railway will provide these)
FRONTEND_URL="https://your-frontend-domain.railway.app"
BACKEND_URL="https://your-backend-domain.railway.app"

# Subscription Prices (in cents)
MONTHLY_PRICE=2990  # R$ 29,90
ANNUAL_PRICE=29990  # R$ 299,90
PREMIUM_PRICE=4990  # R$ 49,90

# Railway Optimization
RAILWAY_STATIC_URL=""
RAILWAY_GIT_COMMIT_SHA=""
